<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".UI.Product.AddProductActivity">
    <LinearLayout
        android:id="@+id/BtnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:elevation="5dp"
        android:background="@drawable/search">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Produk"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:padding="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Produk"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"/>
                <EditText
                    android:id="@+id/EdNamaProduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:padding="20dp"
                    android:hint="Nama Produk"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:inputType="text"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/search"
                    android:fontFamily="@font/roboto"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"/>
                <EditText
                    android:id="@+id/EdHargaProduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:inputType="numberDecimal"
                    android:hint="Harga"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:background="@drawable/search"
                    android:fontFamily="@font/roboto"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stok"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"/>
                <EditText
                    android:id="@+id/EdStok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:inputType="number"
                    android:hint="Stok"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:background="@drawable/search"
                    android:fontFamily="@font/roboto"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"/>
                <EditText
                    android:id="@+id/EdDeskProduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:inputType="textMultiLine"
                    android:hint="Deskripsi"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:background="@drawable/search"
                    android:fontFamily="@font/roboto"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Supplier"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"/>
                <Spinner
                    android:id="@+id/EdSuppProduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:background="@drawable/search"
                    android:fontFamily="@font/roboto"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kategori"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"/>
                <Spinner
                    android:id="@+id/EdKategoriProduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:background="@drawable/search"
                    android:fontFamily="@font/roboto"/>

                <Button
                    android:id="@+id/BtnSimpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btnungu"
                    android:text="Tambah"
                    android:textColor="@color/white"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>